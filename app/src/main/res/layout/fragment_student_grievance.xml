<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".student.fragment.StudentGrievanceFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <TextView
                android:id="@+id/grievance_fragment"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:padding="20dp"
                android:text="Give Grievance"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/title_student_grievance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/grievance_fragment"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:hint="Title"
                android:padding="8dp"
                android:background="@drawable/background_border"/>


            <EditText
                android:id="@+id/desc_student_grievance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_student_grievance"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:height="200dp"
                android:autofillHints="Title"
                android:background="@drawable/background_border"
                android:gravity="top"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:maxLength="2000"
                android:padding="8dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/submit_student_grievance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/desc_student_grievance"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/primary_color"
                android:paddingVertical="15dp"
                android:text="SUBMIT GRIEVANCE"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:id="@+id/fake_anchor_layout"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>



</FrameLayout>