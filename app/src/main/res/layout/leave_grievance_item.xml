<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/today_date_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp">

            <TextView
                android:id="@+id/grievance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Title"
                android:textColor="@color/black"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/grievance_desc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/grievance_title"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"

                android:layout_marginEnd="16dp"
                android:text="Description"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/grievance_name"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_below="@id/grievance_title"
                android:layout_marginStart="16dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="16dp"
                android:text="Student Name"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/grievance_sID"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_below="@id/grievance_title"
                android:layout_marginStart="16dp"
                android:text="Student ID"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/grievance_roomNo"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_below="@id/grievance_title"
                android:text="Room No"
                android:layout_marginStart="50dp"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/grievance_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/round_background"
                android:text="Resolve"
                app:backgroundTint="@color/primary_color" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>