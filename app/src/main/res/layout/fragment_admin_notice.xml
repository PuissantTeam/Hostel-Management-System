<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/primary_background"
    tools:context=".admin.fragment.AdminNoticeFragment">

    <TextView
        android:id="@+id/admin_notice"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Send Notice"
        android:textColor="@color/black"
        android:textSize="25sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/admin_notice_date_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_notice"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"
        android:hint="Date">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/admin_notice_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:textColor="@color/black" />

    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/admin_notice_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_notice_date_layout"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:height="200dp"
        android:autofillHints="Title"
        android:background="@drawable/background_border"
        android:gravity="top"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:maxLength="100"
        android:padding="8dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/submit_notice_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/admin_notice_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/blue_Dark"
        android:paddingVertical="15dp"
        android:text="SUBMIT NOTICE"
        android:textColor="@color/white_cario"
        android:textSize="16sp" />
    <RelativeLayout
        android:id="@+id/fake_anchor_layout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"/>




</RelativeLayout>